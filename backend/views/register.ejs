<h2 style="text-align:center; margin-bottom:30px; color:#fff; letter-spacing:1px;">
  Create Your Account
</h2>

<form action="/register" method="POST" class="register-form">
  <input type="text" name="username" placeholder="Username" required>
  <input type="email" name="email" placeholder="Email" required>
  <input type="password" name="password" placeholder="Password" required>

  <button type="submit">Register</button>

  <p class="login-link">
    Already have an account? 
    <a href="/login">Login</a>
  </p>
</form>

<!-- ✅ Responsive Styling -->
<style>
  .register-form {
    max-width: 500px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.05);
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
    display: flex;
    flex-direction: column;
    gap: 15px;
    color: #fff;
  }

  .register-form input {
    padding: 12px;
    border-radius: 8px;
    border: 1px solid #ccc;
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    font-size: 14px;
    outline: none;
    transition: 0.3s;
  }

  .register-form button {
    padding: 12px;
    background: linear-gradient(135deg, #36A2EB, #1f7ac3);
    color: white;
    border: none;
    border-radius: 10px;
    font-weight: bold;
    cursor: pointer;
    transition: 0.3s;
  }

  .register-form button:hover {
    transform: scale(1.05);
  }

  .login-link {
    text-align: center;
    color: #ccc;
    margin-top: 10px;
  }

  .login-link a {
    color: #36A2EB;
    text-decoration: none;
    font-weight: bold;
  }

  /* ✅ Responsive Adjustments */
  @media (max-width: 768px) {
    h2 {
      font-size: 24px;
      margin-bottom: 25px;
    }

    .register-form {
      max-width: 90%;
      padding: 25px;
    }

    .register-form input,
    .register-form button {
      font-size: 13px;
      padding: 10px;
    }

    .login-link {
      font-size: 13px;
    }
  }

  @media (max-width: 480px) {
    h2 {
      font-size: 20px;
      line-height: 1.3;
      margin-bottom: 20px;
    }

    .register-form {
      width: 92%;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.4);
    }

    .register-form input,
    .register-form button {
      font-size: 12px;
      padding: 9px;
    }

    .login-link {
      font-size: 12px;
    }
  }
</style>

<!-- ✅ Hover & Focus Effects -->
<script>
  document.querySelectorAll('input').forEach(input => {
    input.addEventListener('focus', () => input.style.border = '1px solid #36A2EB');
    input.addEventListener('blur', () => input.style.border = '1px solid #ccc');
  });

  const button = document.querySelector('button');
  button.addEventListener('mouseenter', e => e.target.style.transform = 'scale(1.05)');
  button.addEventListener('mouseleave', e => e.target.style.transform = 'scale(1)');
</script>
