<h2 style="text-align:center; margin-bottom:30px; color:#fff; letter-spacing:1px;">Login to Financial Manager</h2>

<div style="max-width:400px; margin:0 auto; background: rgba(255,255,255,0.05); padding:30px; border-radius:15px; box-shadow:0 4px 20px rgba(0,0,0,0.5);">
    <form action="/login" method="POST" style="display:flex; flex-direction:column; gap:20px;">
        <input type="email" name="email" placeholder="Email" required
            style="padding:12px; border-radius:8px; border:none; outline:none; font-size:14px; background: rgba(255,255,255,0.1); color:#fff;">
        <input type="password" name="password" placeholder="Password" required
            style="padding:12px; border-radius:8px; border:none; outline:none; font-size:14px; background: rgba(255,255,255,0.1); color:#fff;">
        <button type="submit"
            style="padding:12px; border:none; border-radius:8px; background: linear-gradient(135deg,#36A2EB,#1f7ac3); color:white; font-weight:bold; cursor:pointer; transition:0.3s;">
            Login
        </button>
    </form>

    <a href="/auth/google"
       style="display:block; text-align:center; margin-top:20px; padding:10px; border-radius:8px; background: #db4437; color:white; font-weight:bold; text-decoration:none; transition:0.3s;">
       Login with Google
    </a>
</div>

<!-- Optional: hover effects -->
<script>
    document.querySelectorAll('button, a').forEach(el=>{
        el.addEventListener('mouseenter', ()=>el.style.transform='scale(1.05)');
        el.addEventListener('mouseleave', ()=>el.style.transform='scale(1)');
    });
</script>
