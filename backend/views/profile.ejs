<h2 style="
  text-align: center; 
  margin-top: 40px; 
  margin-bottom: 35px; 
  color: #fff; 
  letter-spacing: 1px; 
  font-family: 'Segoe UI', sans-serif;
">
  Your Profile
</h2>

<div class="profile-container">
  <div style="margin-bottom: 25px;">
    <p style="margin-bottom: 12px; font-size: 16px;"><strong>Name:</strong> <%= user.username %></p>
    <p style="margin-bottom: 12px; font-size: 16px;"><strong>Email:</strong> <%= user.email %></p>
  </div>

  <% if (user.total_expenses || user.monthly_budget) { %>
    <hr style="border: none; height: 1px; background: rgba(255,255,255,0.1); margin: 25px 0;">
    <% if (user.total_expenses) { %>
      <p style="margin-bottom: 12px; font-size: 16px;"><strong>Total Expenses:</strong> $<%= user.total_expenses %></p>
    <% } %>
    <% if (user.monthly_budget) { %>
      <p style="margin-bottom: 12px; font-size: 16px;"><strong>Monthly Budget:</strong> $<%= user.monthly_budget %></p>
    <% } %>
  <% } %>

  <!-- Buttons -->
  <div class="profile-buttons">
    <a href="/expenses/dashboard" class="btn-blue">Go to Dashboard</a>
    <a href="/budget" class="btn-green">Set Budget</a>
    <a href="/profile/recommendations" class="btn-orange">View AI Recommendations</a>
  </div>
</div>

<style>
  .profile-container {
    max-width: 600px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.05);
    padding: 45px 40px;
    border-radius: 15px;
    box-shadow: 0 4px 25px rgba(0,0,0,0.4);
    color: #fff;
    font-family: 'Segoe UI', sans-serif;
    line-height: 1.8;
    animation: fadeIn 0.8s ease-in-out;
  }

  .profile-buttons {
    margin-top: 35px;
    text-align: center;
    display: flex;
    justify-content: center;
    gap: 15px;
    flex-wrap: wrap;
  }

  .profile-buttons a {
    padding: 12px 28px;
    color: white;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    font-size: 15px;
  }

  .btn-blue {
    background: linear-gradient(135deg, #36A2EB, #1f7ac3);
  }

  .btn-green {
    background: linear-gradient(135deg, #36EB83, #1fa35f);
  }

  .btn-orange {
    background: linear-gradient(135deg, #FFB74D, #FF9800);
  }

  @keyframes fadeIn {
    from {opacity: 0; transform: translateY(20px);}
    to {opacity: 1; transform: translateY(0);}
  }

  a:hover {
    opacity: 0.9;
    transform: scale(1.03);
  }

  /* âœ… Responsive Design */
  @media (max-width: 768px) {
    .profile-container {
      max-width: 90%;
      padding: 30px 20px;
    }

    h2 {
      font-size: 24px;
    }

    .profile-buttons {
      flex-direction: column;
      align-items: center;
    }

    .profile-buttons a {
      width: 80%;
      text-align: center;
      font-size: 14px;
      padding: 12px 20px;
    }
  }

  @media (max-width: 480px) {
    h2 {
      font-size: 20px;
      line-height: 1.3;
    }

    .profile-container {
      width: 92%;
      padding: 25px 18px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.3);
    }

    .profile-buttons a {
      width: 100%;
      padding: 10px 15px;
      font-size: 13px;
    }

    p {
      font-size: 14px;
    }
  }
</style>
